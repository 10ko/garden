#!/usr/bin/env bash

# check dependency licenses
echo "Checking dependency licenses..."
node_modules/.bin/license-checker --failOn GPL --summary

if [[ $? != 0 ]]; then
    exit 1
fi

# make sure no source files are missing license headers
echo "Checking source license and copyright headers..."
updated=$(./bin/add-licenses --dry-run 2>&1 | grep UPDATE)

if [[ $updated != "" ]] ; then
    echo "Some files are missing licenses:"
    echo "$(echo "$updated" | sed 's/^UPDATE //' | sed 's/\[dry-run\]$//')"
    exit 1
else
    echo "OK"
fi
