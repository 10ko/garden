{
  "name": "garden",
  "version": "0.3.1",
  "description": "A full-featured development framework for containers and serverless",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garden-io/garden.git"
  },
  "author": "Garden Technologies, Inc. <info@garden.io>",
  "license": "MPL-2.0",
  "homepage": "https://github.com/garden-io/garden",
  "engines": {
    "npm": ">=5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@types/bluebird": "^3.5.20",
    "@types/execa": "^0.9.0",
    "@types/node": "^10.3.2",
    "axios": "^0.18.0",
    "gulp": "^4.0.0",
    "gulp-cached": "^1.1.1",
    "gulp-license-check": "^1.2.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^5.0.0-alpha.1",
    "husky": "^0.15.0-rc.13",
    "lerna": "^3.0.0-beta.21",
    "shx": "^0.3.2",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "tslint-no-unused": "^0.1.1",
    "typescript": "^2.9.1",
    "typescript-formatter": "^7.2.2"
  },
  "scripts": {
    "build": "npm run clean && lerna run build",
    "check-licenses": "gulp check-licenses",
    "check-package-lock": "git diff-index --quiet HEAD -- package-lock.json || (echo 'package-lock.json is dirty!' && exit 1)",
    "clean": "lerna run clean && git clean -X -f",
    "dist": "lerna run dist",
    "fix-format": "node_modules/.bin/tslint -p . --fix && node_modules/.bin/tsfmt -r",
    "integ": "lerna run integ",
    "lint": "gulp lint",
    "prepublishOnly": "npm run dist",
    "preversion": "npm test",
    "release": "./bin/publish",
    "release-canary": "lerna publish --npm-tag=alpha --canary",
    "test": "npm run clean && lerna run test"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E GIT_PARAMS",
      "pre-push": "npm run check-package-lock && npm test && npm run integ"
    }
  },
  "snyk": true
}
